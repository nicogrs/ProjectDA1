@using Dominio.Data
@inject NavigationManager Navigation
@inject PanelDatabase Database

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Title</h4>
        <p class="card-text">@Description</p>
    </div>
    <div class="card-footer">
        <div class="form-group">
            <button class="btn btn-primary" type="submit" @onclick="GoToPanel">Ir</button>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Description { get; set; }
    
    private string teamName;
    
    protected override void OnParametersSet()
    {
        var panel = Database.GetPanelByName(Title);
        if (panel != null && panel.Team != null)
        {
            teamName = panel.Team.Name;
        }
    }
    
    private void GoToPanel()
    {
        Navigation.NavigateTo($"/{teamName}/{Title}/tasks");
    }
}