@page "/account/teams"

@using Logica
@inject Session Session
@inject NavigationManager Navigation

<PageTitle>Equipos</PageTitle>

<div class="row">
    <h3>Equipos</h3>
    
    @if(Session.IsAdmin){
        <div class="form-group">
            <button class="btn btn-primary" type="submit" @onclick="CreateTeam">Crear un equipo</button>
        </div>
    }
    
    @if (Session.GetTeams().Count != 0)
    {
        foreach (var team in Session.GetTeams())
        {
            <TeamCard Title="@team.Name"/>
        }
    }
    else
    {
        <p>No tienes equipos asignados.</p>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        if (Session.CurrentUser == null)
        {
            Navigation.NavigateTo("/error");
        }
    }
    
    private void CreateTeam()
    {
        Navigation.NavigateTo("/teams/create");
    }
}